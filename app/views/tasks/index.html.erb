<div class="card ">
  <div class="card-header">
    <h1>Tasks index page</h1>
  </div>
  <div class="card-body">
  <table class="table">
  <thead>
    <tr>
      <th scope="col"><%= Task.human_attribute_name(:title) %></th>
      <th scope="col"><%= Task.human_attribute_name(:content) %></th>
      <th scope="col"><%= Task.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %></td>
        <td> <a class="btn btn-primary " href="<%= task_path(task.id) %>" id="show-task">Show</a></td>
        <td> <a class="btn btn-success " href="<%= edit_task_path(task.id) %>" id="edit-task">Edit</a></td>
        <td> <a class="btn btn-danger " href="<%= destroy_path(task.id) %>" data-confirm="Are you sure?" data-method="delete"  id="destroy-task">Destroy</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
    
</div>
